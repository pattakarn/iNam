<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".new_design.activity.SplashScreen">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/background"
            tools:layout_editor_absoluteY="0dp"
            android:id="@+id/background"
    />

    <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            app:srcCompat="@drawable/inam_logo"
            android:id="@+id/iv1"
            android:scaleType="centerCrop" android:layout_gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/background" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/background" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.488" app:layout_constraintVertical_bias="0.271"/>

    <ImageView
            android:layout_width="348dp"
            android:layout_height="203dp"
            app:srcCompat="@drawable/flag"
            android:id="@+id/iv2"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/iv1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/background" app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"/>
</androidx.constraintlayout.widget.ConstraintLayout>