<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextTitleItem"
            android:text="Contact"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="8dp">

        <ImageView
                android:id="@+id/iv_contact_link"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_link"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/tv_contact_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="link"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:lineSpacingExtra="4dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="8dp">

        <ImageView
                android:id="@+id/iv_contact_phone"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_phone"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/tv_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="phone"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="8dp">

        <ImageView
                android:id="@+id/iv_contact_line"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_line"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/tv_contact_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="line"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="8dp">

        <ImageView
                android:id="@+id/iv_contact_fb"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_fb"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/tv_contact_fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="facebook"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginTop="8dp">

        <ImageView
                android:id="@+id/iv_contact_email"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_email"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/tv_contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"/>

    </LinearLayout>


</LinearLayout>