<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".example.Home">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:fitsSystemWindows="true"
            android:layout_height="@dimen/app_bar_height"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:toolbarId="@+id/toolbar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:background="@drawable/ic_region"
                app:contentScrim="?attr/colorPrimary">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    app:layout_collapseMode="pin"
                    app:title="Home"
                    app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize"
            tools:context=".example.TestFragment">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <TextView
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_region"
                    android:layout_marginBottom="@dimen/text_margin"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginTop="@dimen/text_margin"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                <com.sungkunn.inam.view.MenuCardView
                        android:id="@+id/menu_north"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/menu_height"
                        android:layout_margin="@dimen/menu_margin"
                        android:layout_weight="1"
                        app:menu_title="North"
                        app:menu_photo="@drawable/ic_region"/>

                <com.sungkunn.inam.view.MenuCardView
                        android:id="@+id/menu_east"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/menu_height"
                        android:layout_margin="@dimen/menu_margin"
                        android:layout_weight="1"
                        app:menu_title="East"
                        app:menu_photo="@drawable/ic_switzerland"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                <com.sungkunn.inam.view.MenuCardView
                        android:id="@+id/menu_west"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/menu_height"
                        android:layout_margin="@dimen/menu_margin"
                        android:layout_weight="1"
                        app:menu_title="West"
                        app:menu_photo="@drawable/ic_region"/>

                <com.sungkunn.inam.view.MenuCardView
                        android:id="@+id/menu_south"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/menu_height"
                        android:layout_margin="@dimen/menu_margin"
                        android:layout_weight="1"
                        app:menu_title="South"
                        app:menu_photo="@drawable/ic_region"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                <com.sungkunn.inam.view.MenuCardView
                        android:id="@+id/menu_northeast"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/menu_height"
                        android:layout_margin="@dimen/menu_margin"
                        android:layout_weight="1"
                        app:menu_title="Northeast"
                        app:menu_photo="@drawable/ic_region"/>

                <View
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_margin="@dimen/menu_margin"
                        android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_manage_data"
                    android:layout_marginBottom="@dimen/text_margin"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginLeft="@dimen/text_margin"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        style="@style/MenuManageText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Market &amp; Store"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/text_margin"
                        android:layout_marginTop="@dimen/text_margin"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                    <com.sungkunn.inam.view.MenuCardView
                            android:id="@+id/menu_market"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/menu_manage_height"
                            android:layout_margin="@dimen/menu_margin"
                            android:layout_weight="1"
                            app:menu_title="Market"
                            app:menu_photo="@drawable/ic_market"/>

                    <com.sungkunn.inam.view.MenuCardView
                            android:id="@+id/menu_zone"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/menu_manage_height"
                            android:layout_margin="@dimen/menu_margin"
                            android:layout_weight="1"
                            app:menu_title="Zone"
                            app:menu_photo="@drawable/ic_market"/>

                    <com.sungkunn.inam.view.MenuCardView
                            android:id="@+id/menu_store"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/menu_manage_height"
                            android:layout_margin="@dimen/menu_margin"
                            android:layout_weight="1"
                            app:menu_title="Store"
                            app:menu_photo="@drawable/ic_market"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                    <com.sungkunn.inam.view.MenuCardView
                            android:id="@+id/menu_product"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/menu_manage_height"
                            android:layout_margin="@dimen/menu_margin"
                            android:layout_weight="1"
                            app:menu_title="Product"
                            app:menu_photo="@drawable/ic_market"/>

                    <com.sungkunn.inam.view.MenuCardView
                            android:id="@+id/menu_stock"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/menu_manage_height"
                            android:layout_margin="@dimen/menu_margin"
                            android:layout_weight="1"
                            app:menu_title="Stock"
                            app:menu_photo="@drawable/ic_market"/>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/menu_manage_height"
                            android:layout_margin="@dimen/menu_margin"
                            android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        style="@style/MenuManageText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hotel"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/text_margin"
                        android:layout_marginTop="@dimen/text_margin"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                    <com.sungkunn.inam.view.MenuCardView
                            android:id="@+id/menu_hotel"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/menu_manage_height"
                            android:layout_margin="@dimen/menu_margin"
                            android:layout_weight="1"
                            app:menu_title="Hotel"
                            app:menu_photo="@drawable/ic_hotel"/>

                    <com.sungkunn.inam.view.MenuCardView
                            android:id="@+id/menu_room"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/menu_manage_height"
                            android:layout_margin="@dimen/menu_margin"
                            android:layout_weight="1"
                            app:menu_title="Room"
                            app:menu_photo="@drawable/ic_hotel"/>

                    <com.sungkunn.inam.view.MenuCardView
                            android:id="@+id/menu_book"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/menu_manage_height"
                            android:layout_margin="@dimen/menu_margin"
                            android:layout_weight="1"
                            app:menu_title="Book"
                            app:menu_photo="@drawable/ic_hotel"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        style="@style/MenuManageText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Travel &amp; Network &amp; Service"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/text_margin"
                        android:layout_marginTop="@dimen/text_margin"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                    <com.sungkunn.inam.view.MenuCardView
                            android:id="@+id/menu_travel"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/menu_manage_height"
                            android:layout_margin="@dimen/menu_margin"
                            android:layout_weight="1"
                            app:menu_title="Travel"
                            app:menu_photo="@drawable/ic_travel"/>

                    <com.sungkunn.inam.view.MenuCardView
                            android:id="@+id/menu_network"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/menu_manage_height"
                            android:layout_margin="@dimen/menu_margin"
                            android:layout_weight="1"
                            app:menu_title="Network"
                            app:menu_photo="@drawable/ic_travel"/>

                    <com.sungkunn.inam.view.MenuCardView
                            android:id="@+id/menu_service"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/menu_manage_height"
                            android:layout_margin="@dimen/menu_margin"
                            android:layout_weight="1"
                            app:menu_title="Service"
                            app:menu_photo="@drawable/ic_travel"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>